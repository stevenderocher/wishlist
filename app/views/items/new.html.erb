<h2>New Item on List</h2>

<% semantic_form_for([@list, @item]) do |form| %>
  <%= form.error_messages %>
    <% form.inputs do %>
  	  <%= form.input :product_name %>
  	  <%= form.input :seller %>
  	  <%= form.input :description %>
	  <%= form.input :price %>
	  <%= form.input :quantity %>
	  <%= form.input :product_url %>
	  <%= form.input :product_image_url %>
	  <%= form.input :comments %>
	<% end %>
  <% form.buttons do %>
    <%= form.commit_button "Add" %>
  <% end %>
<% end %>


<h2>Edit <%= h @item.product_name %> from <%= h @list.user.email %>'s List "<%= h @list.title %>"</h2>

<% semantic_form_for([@list, @item]) do |form| %>
  <%= form.error_messages %>
    <% form.inputs do %>
  	  <%= form.input :product_name %>
  	  <%= form.input :seller %>
  	  <%= form.input :description %>
	  <%= form.input :price %>
	  <%= form.input :quantity %>
	  <%= form.input :product_url %>
	  <%= form.input :product_image_url %>
	  <%= form.input :comments %>
	<% end %>
  <% form.buttons do %>
    <%= form.commit_button "Update" %>
  <% end %>
<% end %>

